{
  "name": "devtoolscenter",
  "version": "1.0.0",
  "description": "Free developer tools website - JSON formatter, JWT decoder, and more",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:css": "node -e \"require('fs').mkdirSync('_site/assets/css', {recursive: true}); require('fs').cpSync('src/assets/css/styles.css', '_site/assets/css/styles.css', {recursive: false});\"",
    "build": "npm run build:css && npm run build:eleventy",
    "build:css": "node -e \"require('fs').mkdirSync('_site/assets/css', {recursive: true}); require('fs').cpSync('src/assets/css/styles.css', '_site/assets/css/styles.css', {recursive: false});\"",
    "build:eleventy": "eleventy"
  },
  "keywords": [
    "developer-tools",
    "json-formatter",
    "jwt-decoder",
    "base64",
    "regex-tester"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "npm-run-all": "^4.1.5"
  }
}
