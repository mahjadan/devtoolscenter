{
  "name": "devtoolscenter",
  "version": "1.0.0",
  "description": "Free developer tools website - JSON formatter, JWT decoder, and more",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:css": "tailwindcss -i src/assets/css/styles.css -o _site/assets/css/styles.css --watch",
    "build": "npm run build:css && npm run build:eleventy",
    "build:css": "mkdir -p _site/assets/css && tailwindcss -i src/assets/css/styles.css -o _site/assets/css/styles.css --minify",
    "build:eleventy": "eleventy",
    "test": "playwright test",
    "test:verify-theme": "node tmp_rovodev_verify_theme.js",
    "test:update-snapshots": "playwright test --update-snapshots"
  },
  "keywords": [
    "developer-tools",
    "json-formatter",
    "jwt-decoder",
    "base64",
    "regex-tester"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@playwright/test": "^1.56.1",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  }
}
