<!DOCTYPE html>
<html lang="en" data-theme="premium-dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {# SEO Meta Tags #}
  <title>{{ title }}{% if title %} | {% endif %}DevTools Center</title>
  <meta name="description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  {% if keywords %}<meta name="keywords" content="{{ keywords }}">{% endif %}
  
  {# Canonical URL #}
  <link rel="canonical" href="https://devtoolscenter.com{{ page.url }}">
  
  {# Open Graph Tags #}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }}{% if title %} | {% endif %}DevTools Center">
  <meta property="og:description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  <meta property="og:url" content="https://devtoolscenter.com{{ page.url }}">
  <meta property="og:site_name" content="DevTools Center">
  {% if image %}<meta property="og:image" content="{{ image }}">{% endif %}
  
  {# Twitter Card Tags #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}{% if title %} | {% endif %}DevTools Center">
  <meta name="twitter:description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  {% if image %}<meta name="twitter:image" content="{{ image }}">{% endif %}
  
  {# Favicon #}
  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  
  {# Google Fonts - All theme fonts #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500;600&family=Inter:wght@300;400;500;600&family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;700;900&display=swap" rel="stylesheet">
  
  {# CSS Component Library - Replaces Tailwind utilities #}
  <link rel="stylesheet" href="{{ '/assets/css/components.css' | assetUrl }}">
  
  {# Theme CSS Files #}
  <link rel="stylesheet" href="{{ '/assets/css/themes/zen-light.css' | assetUrl }}">
  <link rel="stylesheet" href="{{ '/assets/css/themes/premium-dark.css' | assetUrl }}">
  <link rel="stylesheet" href="{{ '/assets/css/themes/cyberpunk.css' | assetUrl }}">
  
  {# Main Styles #}
  <link rel="stylesheet" href="{{ '/assets/css/styles.css' | assetUrl }}">
  
  {# Theme Switcher - Inline to prevent flash #}
  <script>
    (function() {
      const storageKey = 'devtools-theme-preference';
      function getThemePreference() {
        const saved = localStorage.getItem(storageKey);
        if (saved && (saved === 'zen-light' || saved === 'premium-dark' || saved === 'cyberpunk')) {
          return saved;
        }
        // Default to premium-dark theme
        return 'premium-dark';
      }
      
      const theme = getThemePreference();
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
  
  {# JSON-LD Structured Data #}
  {% if schema %}
  <script type="application/ld+json">
    {{ schema | jsonld | safe }}
  </script>
  {% endif %}
  {% if breadcrumbSchema %}
  <script type="application/ld+json">
    {{ breadcrumbSchema | jsonld | safe }}
  </script>
  {% endif %}
</head>
<body>
  {# Premium Dark Theme - Gradient Mesh Background #}
  <div class="gradient-mesh">
    <div class="mesh-gradient-1"></div>
    <div class="mesh-gradient-2"></div>
    <div class="mesh-gradient-3"></div>
  </div>

  {# Premium Dark Theme - Interactive Cursor Trail #}
  <div class="cursor-trail" id="cursorTrail"></div>

  {% include "partials/header.njk" %}
  
  <main id="main-content" class="min-h-screen">
    {{ content | safe }}
  </main>
  
  {% include "partials/footer.njk" %}
  
  {# Theme Switcher Script #}
  <script src="{{ '/assets/js/theme-switcher.js' | assetUrl }}"></script>
  
  {# Mobile Menu Script #}
  <script src="{{ '/assets/js/mobile-menu.js' | assetUrl }}"></script>
  
  {# Navigation Active State Script #}
  <script src="{{ '/assets/js/nav-active-state.js' | assetUrl }}"></script>
  
  {# Page-specific scripts #}
  {% if pageScript %}
  <script src="{{ pageScript | assetUrl }}" defer></script>
  {% endif %}
</body>
</html>

