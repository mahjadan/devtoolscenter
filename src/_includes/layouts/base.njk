<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {# SEO Meta Tags #}
  <title>{{ title }}{% if title %} | {% endif %}DevTools Center</title>
  <meta name="description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  {% if keywords %}<meta name="keywords" content="{{ keywords }}">{% endif %}
  
  {# Canonical URL #}
  <link rel="canonical" href="https://devtoolscenter.com{{ page.url }}">
  
  {# Open Graph Tags #}
  {% set ogImage = image or '/assets/images/favicon.svg' %}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }}{% if title %} | {% endif %}DevTools Center">
  <meta property="og:description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  <meta property="og:url" content="https://devtoolscenter.com{{ page.url }}">
  <meta property="og:site_name" content="DevTools Center">
  <meta property="og:image" content="{{ ogImage }}">
  
  {# Twitter Card Tags #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}{% if title %} | {% endif %}DevTools Center">
  <meta name="twitter:description" content="{{ description or 'Free online developer tools for JSON formatting, JWT decoding, Base64 encoding, and more.' }}">
  <meta name="twitter:image" content="{{ ogImage }}">
  
  {# Favicon #}
  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  
  {% if env.GTM_ID %}
  <!-- Google Tag Manager -->
  <script>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','{{ env.GTM_ID }}');
  </script>
  <!-- End Google Tag Manager -->
  {% endif %}
  
  {# Styles #}
  <link rel="stylesheet" href="{{ '/assets/css/styles.css' | assetUrl }}">
  <link rel="stylesheet" href="/assets/css/notifications-standalone.css">
  {% if toolStyles %}
  {% for styleFile in toolStyles.split(',') %}
  <link rel="stylesheet" href="{{ ('/assets/css/tools/' + styleFile.trim()) | assetUrl }}">
  {% endfor %}
  {% endif %}
  
  {# Theme Toggle - Inline to prevent flash #}
  <script>
    (function() {
      function getThemePreference() {
        if (localStorage.theme) {
          return localStorage.theme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }
      
      function setTheme(theme) {
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
          document.documentElement.setAttribute('data-theme', 'dark');
        } else {
          document.documentElement.classList.remove('dark');
          document.documentElement.setAttribute('data-theme', 'light');
        }
      }
      
      setTheme(getThemePreference());
    })();
  </script>
  
  {# JSON-LD Structured Data #}
  {% if schema %}
  <script type="application/ld+json">
    {{ schema | jsonld | safe }}
  </script>
  {% endif %}
  {% if breadcrumbSchema %}
  <script type="application/ld+json">
    {{ breadcrumbSchema | jsonld | safe }}
  </script>
  {% endif %}
</head>
<body>
  {% if env.GTM_ID %}
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ env.GTM_ID }}" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
  {% endif %}
  {% include "partials/header.njk" %}
  
  <main id="main-content" class="min-h-screen">
    {{ content | safe }}
  </main>
  
  {% include "partials/footer.njk" %}
  
  {# Theme Toggle Script #}
  <script src="{{ '/assets/js/theme-toggle.js' | assetUrl }}"></script>
  
  {# Mobile Menu Script #}
  <script src="{{ '/assets/js/mobile-menu.js' | assetUrl }}"></script>
  
  {# Navigation Active State Script #}
  <script src="{{ '/assets/js/nav-active-state.js' | assetUrl }}"></script>
  
  {# Page-specific scripts #}
  {% if additionalScripts %}
  {% for script in additionalScripts %}
  <script src="{{ script | assetUrl }}" defer></script>
  {% endfor %}
  {% endif %}
  {% if pageScript %}
  {% if pageScriptModule %}
  <script type="module" src="{{ pageScript | assetUrl }}"></script>
  {% else %}
  <script src="{{ pageScript | assetUrl }}" defer></script>
  {% endif %}
  {% endif %}
  
  {# GTM Events: blog→tool clicks and tool interactions #}
  <script>
    (function() {
      function pushEvent(evt) {
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push(evt);
      }
      // Blog → Tool navigation
      document.addEventListener('click', function(e) {
        var anchor = e.target && e.target.closest && e.target.closest('a');
        if (!anchor) return;
        try {
          var href = anchor.getAttribute('href') || '';
          // Only internal links
          if (!href || href.indexOf('http') === 0 || href.indexOf('mailto:') === 0 || href.indexOf('tel:') === 0) return;
          // From blog to a tool page (heuristic: not a blog URL)
          if ((location.pathname || '').indexOf('/blog/') === 0 && href.indexOf('/blog/') !== 0) {
            pushEvent({
              event: 'blog_to_tool_click',
              link: href,
              page: location.pathname
            });
          }
        } catch (_) {}
      }, true);
      // Tool actions: button clicks inside tool shell
      document.addEventListener('click', function(e) {
        var btn = e.target && e.target.closest && e.target.closest('.tool-shell button, .btn');
        if (!btn) return;
        var toolShell = e.target.closest('.tool-shell');
        if (!toolShell) return;
        pushEvent({
          event: 'tool_action',
          action: (btn.textContent || '').trim(),
          tool: location.pathname
        });
      }, true);
      // Tool actions: paste into any tool textarea
      document.addEventListener('paste', function(e) {
        var ta = e.target && e.target.closest && e.target.closest('.tool-shell textarea');
        if (!ta) return;
        pushEvent({
          event: 'tool_paste',
          fieldId: ta.id || '',
          tool: location.pathname
        });
      }, true);
    })();
  </script>
</body>
</html>

