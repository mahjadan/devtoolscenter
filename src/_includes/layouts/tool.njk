---
layout: layouts/base.njk
---

<div class="container mx-auto px-4 py-8 max-w-6xl">
  <div class="tool-shell{% if toolClass %} {{ toolClass }}{% endif %}">
    {# Tool Header #}
    <div class="tool-shell__header motion-fade-in">
      <h1 class="tool-shell__title">{{ title }}</h1>
      <p class="tool-shell__description">{{ description }}</p>
    </div>
    
    {# Tool Interface #}
    <div class="tool-shell__interface">
      {{ content | safe }}
    </div>
  </div>
  
  {# Related Tools Section #}
  {% if relatedTools %}
  <div class="tool-shell__related">
    <h2 class="tool-shell__related-title">Related Tools</h2>
    <div class="tool-shell__related-grid">
      {% for toolUrl in relatedTools %}
        {% for tool in collections.tools %}
          {% if tool.url == toolUrl %}
        <a href="{{ tool.url }}" class="tool-card tool-shell__related-card motion-elevate">
          <h3 class="tool-card__title text-lg font-semibold mb-2">{{ tool.data.title }}</h3>
          <p class="tool-card__subtitle text-sm">{{ tool.data.description }}</p>
        </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
  
  {# SEO Content Section #}
  {% if seoContent %}
  <div class="tool-shell__seo">
    <div class="prose dark:prose-invert max-w-none">
      {{ seoContent | safe }}
    </div>
  </div>
  {% endif %}
</div>

