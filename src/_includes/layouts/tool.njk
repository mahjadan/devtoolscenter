---
layout: layouts/base.njk
---

<div class="container mx-auto px-4 py-8 max-w-6xl">
  <div class="tool-shell{% if toolClass %} {{ toolClass }}{% endif %}">
    {# Tool Header #}
    <div class="tool-shell__header">
      <h1 class="tool-shell__title">{{ title }}</h1>
      <p class="tool-shell__description">{{ description }}</p>
    </div>
    
    {# Tool Interface #}
    <div class="tool-shell__interface">
      {{ content | safe }}
    </div>
  </div>
  
  {# Related Tools Section #}
  {% if relatedTools %}
  <div class="mt-12 pt-8 border-t-2 border-gray-200 dark:border-gray-700">
    <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Related Tools</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {% for toolUrl in relatedTools %}
        {% for tool in collections.tools %}
          {% if tool.url == toolUrl %}
        <a href="{{ tool.url }}" class="tool-card block">
          <h3 class="font-semibold text-lg mb-2 text-gray-900 dark:text-white">{{ tool.data.title }}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">{{ tool.data.description }}</p>
        </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
  
  {# SEO Content Section #}
  {% if seoContent %}
  <div class="mt-12 pt-8 border-t-2 border-gray-200 dark:border-gray-700">
    <div class="prose dark:prose-invert max-w-none">
      {{ seoContent | safe }}
    </div>
  </div>
  {% endif %}
</div>

