---
layout: layouts/base.njk
---

<div class="content-container">
  {# Tool Header #}
  <div class="tool-header">
    <h1 class="tool-title">{{ title }}</h1>
    <p class="tool-description">{{ description }}</p>
  </div>
  
  {# Tool Interface #}
  <div class="tool-interface">
    {{ content | safe }}
  </div>
  
  {# Related Tools Section #}
  {% if relatedTools %}
  <div class="related-tools-section">
    <h2 class="section-title">Related Tools</h2>
    <div class="related-tools-grid">
      {% for toolUrl in relatedTools %}
        {% for tool in collections.tools %}
          {% if tool.url == toolUrl %}
        <a href="{{ tool.url }}" class="tool-card">
          <h3 class="tool-card-title">{{ tool.data.title }}</h3>
          <p class="tool-card-description">{{ tool.data.description }}</p>
        </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
  
  {# SEO Content Section #}
  {% if seoContent %}
  <div class="seo-content-section">
    <div class="prose">
      {{ seoContent | safe }}
    </div>
  </div>
  {% endif %}
</div>

