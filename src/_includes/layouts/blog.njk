---
layout: layouts/base.njk
---

<article class="content-container article-animate">
  {# Article Header - Enhanced Design #}
  <header class="blog-header">
    {# Breadcrumb Navigation #}
    <div class="breadcrumb-nav">
      <a href="/blog/" class="breadcrumb-link">
        <svg class="breadcrumb-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Blog
      </a>
      <span class="breadcrumb-separator">/</span>
      <span class="breadcrumb-category">{{ category }}</span>
    </div>
    
    {# Hero Title with Gradient #}
    <div class="article-hero-gradient blog-hero">
      <h1 class="article-title">
        {{ title }}
      </h1>
      <p class="article-description">{{ description }}</p>
    </div>
    
    {# Metadata with Icons #}
    <div class="article-metadata">
      <div class="metadata-item">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span>DevToolsCenter Team</span>
      </div>
      <div class="metadata-item">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <time datetime="{{ date }}">{{ date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</time>
      </div>
      {% if readTime %}
      <div class="metadata-item">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{{ readTime }} min read</span>
      </div>
      {% endif %}
    </div>
  </header>

  {# Article Content - Enhanced Typography with Better Contrast #}
  <div class="article-content prose code-block-enhanced">
    {{ content | safe }}
  </div>

  {# Related Tool CTA - Enhanced Design #}
  {% if relatedTool %}
  <div class="related-tool-cta">
    <div class="cta-background">
      <div class="cta-overlay-light"></div>
      <div class="cta-overlay-dark"></div>
    </div>
    <div class="cta-content">
      {# Icon #}
      <div class="cta-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      
      <h3 class="cta-title">Try {{ relatedToolName }} Now</h3>
      <p class="cta-description">
        Ready to put this into practice? Use our free {{ relatedToolName }} tool. It works entirely in your browser with no signup required.
      </p>
      
      <a href="{{ relatedTool }}" class="cta-button">
        <span>Launch {{ relatedToolName }}</span>
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      
      <div class="cta-features">
        <span class="feature-item">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Free Forever
        </span>
        <span class="feature-item">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          No Signup
        </span>
        <span class="feature-item">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Browser-Based
        </span>
      </div>
    </div>
  </div>
  {% endif %}

  {# Related Articles #}
  {% if relatedArticles %}
  <div class="related-articles">
    <h2 class="related-title">Related Articles</h2>
    <div class="related-grid">
      {% for articleUrl in relatedArticles %}
        {% for article in collections.blog %}
          {% if article.url == articleUrl %}
      <a href="{{ article.url }}" class="related-article-card">
        <h3 class="related-article-title">{{ article.data.title }}</h3>
        <p class="related-article-description">{{ article.data.description }}</p>
      </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
</article>

