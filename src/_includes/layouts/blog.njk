---
layout: layouts/base.njk
---

<article class="container mx-auto px-4 py-8 max-w-4xl article-animate">
  {# Article Header - Enhanced Design #}
  <header class="mb-12">
    {# Breadcrumb Navigation #}
    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-6">
      <a href="/blog/" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
        <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Blog
      </a>
      <span>/</span>
      <span class="text-primary-600 dark:text-primary-400 font-medium">{{ category }}</span>
    </div>
    
    {# Hero Title with Gradient #}
    <div class="article-hero-gradient p-8 rounded-xl mb-6">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 bg-gradient-to-r from-primary-600 to-primary-400 dark:from-primary-500 dark:to-primary-300 bg-clip-text text-transparent leading-tight">
        {{ title }}
      </h1>
      <p class="text-xl md:text-2xl text-gray-900 dark:text-gray-300 leading-relaxed font-medium">{{ description }}</p>
    </div>
    
    {# Metadata with Icons #}
    <div class="flex flex-wrap items-center gap-6 text-sm text-gray-600 dark:text-gray-400">
      <div class="flex items-center gap-2">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="font-medium">DevToolsCenter Team</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <time datetime="{{ date }}">{{ date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</time>
      </div>
      {% if readTime %}
      <div class="flex items-center gap-2">
        <svg class="metadata-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{{ readTime }} min read</span>
      </div>
      {% endif %}
    </div>
  </header>

  {# Article Content - Enhanced Typography with Better Contrast #}
  <div class="prose dark:prose-invert max-w-none prose-lg code-block-enhanced
    prose-headings:font-bold 
    prose-h2:text-3xl prose-h2:mt-10 prose-h2:mb-4
    prose-h3:text-2xl prose-h3:mt-6 prose-h3:mb-3
    prose-p:text-base prose-p:leading-relaxed prose-p:mb-5
    prose-a:transition-all
    prose-strong:font-semibold
    prose-code:font-mono prose-code:text-sm
    prose-pre:p-6 prose-pre:my-8 prose-pre:overflow-x-auto
    prose-ul:my-6 prose-ul:space-y-3
    prose-ol:my-6 prose-ol:space-y-3
    prose-li:leading-relaxed
    prose-blockquote:not-italic
    prose-img:rounded-xl prose-img:shadow-lg">
    {{ content | safe }}
  </div>

  {# Related Tool CTA - Enhanced Design #}
  {% if relatedTool %}
  <div class="mt-16 mb-12 relative overflow-hidden rounded-2xl shadow-xl">
    {# Light theme gradient - Blue/primary colors #}
    <div class="absolute inset-0 bg-gradient-to-r from-primary-500 via-primary-600 to-primary-700 dark:hidden"></div>
    {# Dark theme gradient - Dark slate with subtle blue accent #}
    <div class="hidden dark:block absolute inset-0 bg-gradient-to-r from-slate-800 via-slate-700/90 to-slate-800"></div>
    <div class="hidden dark:block absolute inset-0 bg-gradient-to-br from-primary-500/10 via-transparent to-primary-400/5"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-white/5 to-white/10 dark:hidden"></div>
    <div class="relative p-8 md:p-12 text-center">
      {# Icon #}
      <div class="inline-flex items-center justify-center w-16 h-16 mb-6 bg-white/20 dark:bg-white/20 backdrop-blur-lg rounded-full">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      
      <h3 class="text-2xl md:text-3xl font-bold mb-4 text-white">Try {{ relatedToolName }} Now</h3>
      <p class="text-lg text-white opacity-95 mb-8 max-w-2xl mx-auto leading-relaxed">
        Ready to put this into practice? Use our free {{ relatedToolName }} tool. It works entirely in your browser with no signup required.
      </p>
      
      <a href="{{ relatedTool }}" class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-600 dark:text-primary-400 font-semibold rounded-xl hover:bg-gray-50 dark:hover:bg-gray-50 transition-all hover:scale-105 hover:shadow-2xl">
        <span>Launch {{ relatedToolName }}</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      
      <div class="mt-6 flex flex-wrap items-center justify-center gap-6 text-sm text-white opacity-90">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Free Forever
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          No Signup
        </span>
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Browser-Based
        </span>
      </div>
    </div>
  </div>
  {% endif %}

  {# Related Articles #}
  {% if relatedArticles %}
  <div class="mt-12 pt-8 border-t-2 border-gray-200 dark:border-gray-700">
    <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Related Articles</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {% for articleUrl in relatedArticles %}
        {% for article in collections.blog %}
          {% if article.url == articleUrl %}
      <a href="{{ article.url }}" class="group p-6 bg-white dark:bg-gray-800 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-colors">
        <h3 class="font-semibold text-lg mb-2 text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400">{{ article.data.title }}</h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">{{ article.data.description }}</p>
      </a>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
</article>

