---
layout: layouts/base.njk
---

<article class="article-shell">
  <section class="article-hero">
    <div class="article-hero-container">
      <div class="article-hero-grid">
        <div class="article-hero-content">
          <div class="article-hero-badge">
            <svg aria-hidden="true" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" viewBox="0 0 24 24">
              <path d="M9 2l.867 1.802a2 2 0 001.736 1.115l1.918.11a2 2 0 011.128.367l1.618 1.19a2 2 0 00.966.351l1.93.173a2 2 0 011.642 2.591l-.598 1.888a2 2 0 00.286 1.72l1.071 1.64a2 2 0 01-.381 2.62l-1.496 1.246a2 2 0 00-.646 1.964l.412 1.93a2 2 0 01-2.176 2.422l-1.95-.26a2 2 0 00-1.503.408l-1.584 1.274a2 2 0 01-2.512 0l-1.584-1.274a2 2 0 00-1.503-.408l-1.95.26a2 2 0 01-2.176-2.422l.411-1.93a2 2 0 00-.646-1.964L2.81 16.33a2 2 0 01-.381-2.62l1.071-1.64a2 2 0 00.286-1.72l-.598-1.889a2 2 0 011.642-2.59l1.93-.173a2 2 0 00.966-.352l1.618-1.19a2 2 0 011.128-.367l1.918-.11A2 2 0 008.133 3.802L9 2z" />
            </svg>
            <span>Developer Insights</span>
          </div>

          <h1 class="article-hero-title">{{ title }}</h1>

          {% if description %}
          <p class="article-hero-subtitle">{{ description }}</p>
          {% endif %}

          <div class="article-meta">
            {% if author %}
            <span class="article-meta-item">
              <span class="article-meta-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" viewBox="0 0 24 24">
                  <path d="M12 12a5 5 0 100-10 5 5 0 000 10z" />
                  <path d="M20 22a8 8 0 10-16 0" />
                </svg>
              </span>
              <span class="sr-only">Author</span>
              {{ author }}
            </span>
            {% endif %}

            {% if date %}
            <span class="article-meta-item">
              <span class="article-meta-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" viewBox="0 0 24 24">
                  <rect width="18" height="18" x="3" y="4" rx="2" />
                  <path d="M16 2v4" />
                  <path d="M8 2v4" />
                  <path d="M3 10h18" />
                </svg>
              </span>
              <span class="sr-only">Published</span>
              <time datetime="{{ date | date('yyyy-MM-dd') }}">{{ date | date('MMMM d, yyyy') }}</time>
            </span>
            {% endif %}

            {% if readTime %}
            <span class="article-meta-item">
              <span class="article-meta-icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="9" />
                  <path d="M12 7v5l3 2" />
                </svg>
              </span>
              <span class="sr-only">Estimated read time</span>
              {{ readTime }} min read
            </span>
            {% endif %}
          </div>
        </div>

        <div class="article-hero__media">
          <figure class="article-hero__figure">
            {% if heroIllustration %}
              <img src="{{ heroIllustration }}" alt="{{ heroIllustrationAlt or 'Hero illustration for this article' }}">
            {% else %}
              <div class="article-hero__placeholder">
                <span>Hero Illustration Placeholder</span>
              </div>
            {% endif %}
          </figure>
          {% if heroCaption %}
          <figcaption class="article-hero__caption">{{ heroCaption }}</figcaption>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <section class="article-body">
    {{ content | safe }}
  </section>

  {% if jsonExample or apiExample or terminalExample %}
  <section class="article-code-gallery">
    <div class="code-gallery-header">
      <div class="code-gallery-title-block">
        <p class="code-gallery-subtitle">Implementation Ready</p>
        <h2 class="code-gallery-title">Reference Snippets</h2>
      </div>
      <p class="code-gallery-description">Copy, adapt, and ship faster with pre-formatted JSON payloads, API requests, and terminal commands tailored for tooling workflows.</p>
    </div>

    <div class="code-gallery-grid">
      {% if jsonExample %}
      <article class="code-card" data-variant="json">
        <div class="code-card-header">
          <span class="code-card-title">JSON EXAMPLE</span>
          <span class="code-card-tag">JSON</span>
        </div>
        <div class="code-card-body">
          <pre data-language="JSON"><code class="language-json">{{ jsonExample | escape }}</code></pre>
        </div>
      </article>
      {% endif %}

      {% if apiExample %}
      <article class="code-card" data-variant="api">
        <div class="code-card-header">
          <span class="code-card-title">API CALL</span>
          <span class="code-card-tag">{{ apiExampleLanguage | default('HTTP') | upper }}</span>
        </div>
        <div class="code-card-body">
          <pre data-language="{{ apiExampleLanguage | default('HTTP') | upper }}"><code class="language-{{ apiExampleLanguage | default('http') | lower }}">{{ apiExample | escape }}</code></pre>
        </div>
      </article>
      {% endif %}

      {% if terminalExample %}
      <article class="code-card" data-variant="terminal">
        <div class="code-card-header">
          <span class="code-card-title">TERMINAL COMMAND</span>
          <span class="code-card-tag">{{ terminalExampleLanguage | default('Bash') | upper }}</span>
        </div>
        <div class="code-card-body">
          <pre data-language="{{ terminalExampleLanguage | default('Bash') | upper }}"><code class="language-{{ terminalExampleLanguage | default('bash') | lower }}">{{ terminalExample | escape }}</code></pre>
        </div>
      </article>
      {% endif %}
    </div>
  </section>
  {% endif %}

  {% if diagrams %}
  <section class="article-diagrams">
    <div class="diagrams-header">
      <div class="diagrams-title-block">
        <p class="diagrams-subtitle">Visual Systems</p>
        <h2 class="diagrams-title">Diagram Placeholders</h2>
      </div>
      <p class="diagrams-description">Reserve space for architecture diagrams, workflow maps, or annotated screenshots to reinforce the narrative.</p>
    </div>

    <div class="diagrams-grid">
      {% for item in diagrams %}
      <figure class="diagram-item">
        <div class="diagram-frame">
          <div class="diagram-label">{{ item.label or 'Workflow Diagram' }}</div>
        </div>
        {% if item.caption %}
        <figcaption class="diagram-caption">{{ item.caption }}</figcaption>
        {% endif %}
      </figure>
      {% endfor %}
    </div>
  </section>
  {% endif %}

  {% if cta %}
  <section class="article-cta">
    <div class="cta-card">
      <div class="cta-content">
        <div class="cta-text-block">
          <h2 class="cta-headline">{{ cta.headline or 'Ready to keep building?' }}</h2>
          {% if cta.copy %}
          <p class="cta-body">{{ cta.copy }}</p>
          {% endif %}
        </div>
        {% if cta.href and cta.label %}
        <a href="{{ cta.href }}" class="cta-button">
          <span>{{ cta.label }}</span>
          <svg aria-hidden="true" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.6" viewBox="0 0 24 24">
            <path d="M5 12h14" />
            <path d="M12 5l7 7-7 7" />
          </svg>
        </a>
        {% endif %}
      </div>
    </div>
  </section>
  {% endif %}
</article>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const codeBlocks = document.querySelectorAll('.article-body pre code, .article-code-card pre code');

    codeBlocks.forEach((block) => {
      const pre = block.parentElement;
      if (!pre.dataset.language) {
        const languageClass = Array.from(block.classList).find((cls) => cls.startsWith('language-'));
        if (languageClass) {
          pre.dataset.language = languageClass.replace('language-', '').toUpperCase();
        } else {
          pre.dataset.language = 'CODE';
        }
      }
    });
  });
</script>


