<footer style="background: var(--bg-secondary); border-top: 1px solid var(--accent-primary); margin-top: var(--spacing-lg);">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {# About Section #}
      <div>
        <h3 class="font-bold text-lg mb-4">DevTools Center</h3>
        <p class="text-sm" style="color: var(--text-secondary);">
          Free online developer tools to help you format, validate, encode, decode, and test your code.
        </p>
      </div>
      
      {# Quick Links #}
      <div>
        <h3 class="font-bold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-sm" style="color: var(--text-secondary);">Home</a></li>
          <li><a href="/#tools-section" class="text-sm" style="color: var(--text-secondary);">Tools</a></li>
          <li><a href="/blog/" class="text-sm" style="color: var(--text-secondary);">Blog</a></li>
          <li><a href="/about/" class="text-sm" style="color: var(--text-secondary);">About</a></li>
          <li><a href="/contact/" class="text-sm" style="color: var(--text-secondary);">Contact</a></li>
        </ul>
      </div>
      
      {# Tools #}
      <div>
        <h3 class="font-bold text-lg mb-4">Tools</h3>
        <ul class="space-y-2">
          {% for tool in collections.tools %}
          <li><a href="{{ tool.url }}" class="text-sm" style="color: var(--text-secondary);">{{ tool.data.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      {# Legal Links #}
      <div>
        <h3 class="font-bold text-lg mb-4">Legal</h3>
        <ul class="space-y-2">
          <li><a href="/privacy-policy/" class="text-sm" style="color: var(--text-secondary);">Privacy Policy</a></li>
          <li><a href="/terms-of-service/" class="text-sm" style="color: var(--text-secondary);">Terms of Service</a></li>
        </ul>
      </div>
    </div>
    
    {# Copyright #}
    <div class="mt-8 pt-8 text-center" style="border-top: 1px solid var(--accent-primary);">
      <p class="text-sm" style="color: var(--text-secondary);">
        &copy; {{ '' | year }} DevTools Center. All rights reserved.
      </p>
    </div>
  </div>
</footer>

