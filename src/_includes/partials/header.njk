{# Skip to main content link for accessibility #}
<a href="#main-content" class="sr-only">
  Skip to main content
</a>

<header class="header-glassy">
  <nav class="header-nav" role="navigation" aria-label="Main navigation">
    <div class="header-glassy-container">
      <div class="header-content">
        {# Logo/Brand with Gradient #}
        <a href="/" class="header-logo-link" aria-label="DevTools Center Home">
          <span class="header-title-gradient">DevTools Center</span>
        </a>
        
        {# Desktop Navigation Menu #}
        <div class="header-nav-links">
          {% set currentUrl = page.url or '' %}
          {% set isToolPage = currentUrl !== '/' and currentUrl !== '/blog/' and '/blog/' not in currentUrl and currentUrl !== '/about/' and currentUrl !== '/contact/' and currentUrl !== '/privacy-policy/' and currentUrl !== '/terms-of-service/' and currentUrl != '' %}
          {% set isBlogPage = '/blog/' in currentUrl %}
          <a href="/#tools-section" class="nav-link-glass {% if isToolPage %}active{% endif %}" {% if isToolPage %}aria-current="page"{% endif %}>Tools</a>
          <a href="/blog/" class="nav-link-glass {% if isBlogPage %}active{% endif %}" {% if isBlogPage %}aria-current="page"{% endif %}>Blog</a>
          <a href="/about/" class="nav-link-glass {% if currentUrl === '/about/' %}active{% endif %}" {% if currentUrl === '/about/' %}aria-current="page"{% endif %}>About</a>
        </div>
        
        {# Right side buttons (theme switcher + mobile menu) #}
        <div class="header-right-actions">
          <div id="theme-switcher-container" class="theme-switcher-wrapper"></div>
          {# Mobile Menu Toggle Button - Only visible on mobile #}
          <button 
            id="mobile-menu-toggle"
            class="mobile-menu-toggle nav-link-glass"
            aria-label="Toggle mobile navigation menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg id="mobile-menu-icon" class="mobile-menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
            <svg id="mobile-menu-close" class="mobile-menu-icon mobile-menu-close" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    {# Mobile Navigation Menu #}
    <div id="mobile-menu" class="mobile-menu">
      <div class="mobile-menu-links">
        {% set currentUrl = page.url or '' %}
        {% set isToolPage = currentUrl !== '/' and currentUrl !== '/blog/' and '/blog/' not in currentUrl and currentUrl !== '/about/' and currentUrl !== '/contact/' and currentUrl !== '/privacy-policy/' and currentUrl !== '/terms-of-service/' and currentUrl != '' %}
        {% set isBlogPage = '/blog/' in currentUrl %}
        <a href="/#tools-section" class="mobile-nav-link-glass {% if isToolPage %}active{% endif %}" {% if isToolPage %}aria-current="page"{% endif %}>Tools</a>
        <a href="/blog/" class="mobile-nav-link-glass {% if isBlogPage %}active{% endif %}" {% if isBlogPage %}aria-current="page"{% endif %}>Blog</a>
        <a href="/about/" class="mobile-nav-link-glass {% if currentUrl === '/about/' %}active{% endif %}" {% if currentUrl === '/about/' %}aria-current="page"{% endif %}>About</a>
      </div>
    </div>
  </nav>
</header>

{# Mobile menu backdrop overlay #}
<div id="mobile-menu-backdrop" class="mobile-menu-backdrop"></div>

